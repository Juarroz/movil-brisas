<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp">

        <!-- Icono con fondo circular suave -->
        <FrameLayout
                android:id="@+id/iconContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/imgIcono"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="@color/green_brisas"/>
        </FrameLayout>

        <!-- CÃ³digo del pedido -->
        <TextView
                android:id="@+id/tvCodigo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="PED-001"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/green_brisas"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toEndOf="@id/iconContainer"
                app:layout_constraintTop_toTopOf="@id/iconContainer"
                app:layout_constraintEnd_toStartOf="@id/tvEstadoBadge"/>

        <!-- Fecha -->
        <TextView
                android:id="@+id/tvFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="12 Oct 2023"
                android:textSize="13sp"
                android:textColor="@color/gray_medium"
                app:layout_constraintStart_toStartOf="@id/tvCodigo"
                app:layout_constraintTop_toBottomOf="@id/tvCodigo" />

        <!-- Estado (badge redondeado) -->

        <!-- Comentarios -->
        <TextView
                android:id="@+id/tvEstadoBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:id="@+id/tvComentarios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Comentarios adicionales..."
                android:textSize="14sp"
                android:textColor="#4A4A4A"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/iconContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
