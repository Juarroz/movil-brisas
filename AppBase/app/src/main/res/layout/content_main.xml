<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img_2">


    <ImageView
            android:layout_width="56dp"
            android:layout_height="51dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="336dp"
            app:layout_constraintVertical_bias="0.266"/>

    <ImageView
            android:layout_width="323dp"
            android:layout_height="88dp"
            android:src="@mipmap/logo"
            android:background="#000A7A30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.082"/>

    <ImageView
            android:layout_width="170dp"
            android:layout_height="151dp"
            app:srcCompat="@android:drawable/alert_light_frame"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.943"
            app:layout_constraintHorizontal_bias="1.0"/>

    <Button
            android:text=" Roles"
            android:layout_width="266dp"
            android:layout_height="45dp"
            android:id="@+id/MostrarApikotlin"
            android:onClick="crearmostrarpersonas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintVertical_bias="0.434"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyPersonas"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text=" Â¡CONTACTANOS!"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10sp"
            android:contentDescription="Enviar formulario"
            android:background="@drawable/bg_button_green"
            app:backgroundTint="@null"
            android:stateListAnimator="@null"
            app:cornerRadius="24dp" tools:ignore="MissingConstraints" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintVertical_bias="0.727"/>
    <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier"
            app:barrierDirection="left"/>

</androidx.constraintlayout.widget.ConstraintLayout>
