<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#173622"
            android:elevation="8dp">

        <include layout="@layout/top_app_bar" />
        <include layout="@layout/top_admin_bar"/>
        <include layout="@layout/top_user_bar" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

            <TextView
                    android:id="@+id/tvPedidoCodigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pedido #[Cargando...]"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#173622"
                    android:layout_marginBottom="4dp"
                    tools:text="Pedido #P-202512-001"/>

            <TextView
                    android:id="@+id/tvFechaCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente: N/D | Creado: N/D"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="24dp"
                    tools:text="Cliente: Fabian | Creado: 15/12/2025"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado del pedido"
                    android:textSize="12sp"
                    android:textColor="#666666"/>
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#FFFFFF">
                <Spinner
                        android:id="@+id/spinnerEstado"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingHorizontal="12dp"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comentarios"
                    android:textSize="12sp"
                    android:textColor="#666666"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etComentariosDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:textSize="16sp"
                        android:padding="16dp"
                        tools:text="Este es un comentario largo sobre las especificaciones del diseÃ±o."/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historial de Cambios"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#173622"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHistorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_historial"/>

            <TextView
                    android:id="@+id/tvHistorialEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No hay historial de cambios para mostrar."
                    android:gravity="center"
                    android:textColor="@color/gray_dark"
                    android:padding="16dp"
                    android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardarCambios"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Guardar Cambios"
                    android:layout_marginTop="32dp"
                    app:backgroundTint="@color/green_brisas"
                    app:cornerRadius="16dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEliminarPedido"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Eliminar Pedido"
                    app:backgroundTint="@color/red_error"
                    app:cornerRadius="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>