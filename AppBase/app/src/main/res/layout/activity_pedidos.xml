<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@mipmap/img">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#428717"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="14dp"
                android:text="Gestión de pedidos"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrders"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:clipToPadding="false"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintBottom_toTopOf="@id/emptyStateCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
            android:id="@+id/progressLoading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:indeterminate="true"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintBottom_toTopOf="@id/emptyStateCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.153"/>
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/emptyStateCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="4dp">

    </com.google.android.material.card.MaterialCardView>

    <View
            android:layout_width="0dp"
            android:layout_height="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:gravity="center_horizontal" tools:layout_editor_absoluteY="119dp"
            tools:layout_editor_absoluteX="211dp">

        <ImageView
                android:id="@+id/ivEmptyIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:tint="#9E9E9E"
                android:contentDescription="Sin pedidos"/>

        <TextView
                android:id="@+id/tvEmptyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay pedidos"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginTop="12dp"/>

        <TextView
                android:id="@+id/tvEmptySubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los pedidos aparecerán aquí cuando la API responda."
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="6dp"
                android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
