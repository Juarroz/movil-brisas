<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/login_bottom_sheet_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="24dp"
              android:gravity="center_horizontal"
              android:clipToPadding="false">

    <!-- Logo -->
    <ImageView
            android:id="@+id/iv_app_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/logo_120"
            android:layout_marginBottom="32dp"
            android:scaleType="fitCenter"/>

    <!-- Campo de correo con icono -->
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/text_input_stroke_color"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@android:drawable/ic_dialog_email"
            app:startIconTint="@color/green_brisas"
            app:hintTextColor="@color/green_brisas"
            app:endIconMode="clear_text"
            app:endIconTint="@color/gray_medium">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_username_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:padding="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo de contraseña con icono -->
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/text_input_stroke_color"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
            app:startIconTint="@color/green_brisas"
            app:hintTextColor="@color/green_brisas"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/gray_medium">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:padding="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- ¿Olvidaste la contraseña? -->
    <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="@color/green_brisas"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textAlignment="viewEnd"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp" />

    <!-- Botón de inicio de sesión -->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login_sheet"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/action_login"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:backgroundTint="@color/green_brisas"
            app:cornerRadius="16dp"
            app:elevation="4dp"
            android:stateListAnimator="@null" />

    <!-- ¿No tienes cuenta? Regístrate -->
    <TextView
            android:id="@+id/tv_register_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/no_account_register"
            android:textColor="@color/gray_medium"
            android:textSize="14sp"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp" />

</LinearLayout>