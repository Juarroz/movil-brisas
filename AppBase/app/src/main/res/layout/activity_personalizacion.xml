<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Api.personalizacion.PersonalizacionActivity">

    <!-- AppBar ultra minimalista -->
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light"
            app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/background_light"
                app:title="Personalizar"
                app:titleTextColor="@color/green_brisas"
                app:navigationIcon="@drawable/ic_back"
                app:navigationIconTint="@color/green_brisas" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenedor principal con imagen fija -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- ========================================== -->
        <!-- VISTA PREVIA FIJA (STICKY) -->
        <!-- ========================================== -->
        <FrameLayout
                android:id="@+id/frame_preview_sticky"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="@drawable/bg_image_preview"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                    android:id="@+id/iv_main_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Vista previa"
                    tools:src="@drawable/placeholder_ring" />

            <ProgressBar
                    android:id="@+id/progress_loading"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/green_brisas" />

            <!-- Flecha izquierda -->
            <ImageView
                    android:id="@+id/btn_prev_view"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_arrow_left"
                    android:contentDescription="Vista anterior"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/green_brisas"
                    android:alpha="0.85" />

            <!-- Flecha derecha -->
            <ImageView
                    android:id="@+id/btn_next_view"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Vista siguiente"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/green_brisas"
                    android:alpha="0.85" />

            <!-- Indicador de vista minimalista -->
            <TextView
                    android:id="@+id/tv_current_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:text="Vista Frontal"
                    android:textColor="@color/green_brisas"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.08"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

        </FrameLayout>

        <!-- ========================================== -->
        <!-- CONTENIDO SCROLLABLE (OPCIONES) -->
        <!-- ========================================== -->
        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:scrollbars="none"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/frame_preview_sticky"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="100dp">

                <!-- ========================================== -->
                <!-- FORMA -->
                <!-- ========================================== -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Forma"
                        android:textColor="@color/green_brisas"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_forma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:clipToPadding="false"
                        android:layout_marginBottom="28dp"
                        tools:listitem="@layout/item_personalizacion_option" />

                <!-- ========================================== -->
                <!-- GEMA -->
                <!-- ========================================== -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gema"
                        android:textColor="@color/green_brisas"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_gema"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:clipToPadding="false"
                        android:layout_marginBottom="28dp"
                        tools:listitem="@layout/item_personalizacion_option" />

                <!-- ========================================== -->
                <!-- MATERIAL -->
                <!-- ========================================== -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Material"
                        android:textColor="@color/green_brisas"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_material"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:clipToPadding="false"
                        android:layout_marginBottom="28dp"
                        tools:listitem="@layout/item_personalizacion_option" />

                <!-- ========================================== -->
                <!-- TAMAÑO Y TALLA -->
                <!-- ========================================== -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="28dp">

                    <!-- Tamaño -->
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="10dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tamaño"
                                android:textColor="@color/green_brisas"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="10dp" />

                        <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chip_group_tamano"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:singleSelection="true"
                                app:checkedChip="@id/chip_7mm">

                            <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_7mm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7 mm"
                                    android:tag="7-mm"
                                    style="@style/Widget.MaterialComponents.Chip.Choice"
                                    app:chipBackgroundColor="@color/chip_background_color"
                                    app:chipStrokeColor="@color/green_brisas"
                                    app:chipStrokeWidth="2dp" />

                            <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_8mm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8 mm"
                                    android:tag="8-mm"
                                    style="@style/Widget.MaterialComponents.Chip.Choice"
                                    app:chipBackgroundColor="@color/chip_background_color"
                                    app:chipStrokeColor="@color/green_brisas"
                                    app:chipStrokeWidth="2dp" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>

                    <!-- Talla -->
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Talla"
                                android:textColor="@color/green_brisas"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="10dp" />

                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_talla"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                app:boxStrokeColor="@color/green_brisas"
                                app:boxStrokeWidth="2dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:hintEnabled="false">

                            <AutoCompleteTextView
                                    android:id="@+id/spinner_talla"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:text="6"
                                    android:textSize="14sp"
                                    android:padding="14dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- ========================================== -->
                <!-- RESUMEN MINIMALISTA -->
                <!-- ========================================== -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="4dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Resumen"
                            android:textColor="@color/green_brisas"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="12dp" />

                    <TextView
                            android:id="@+id/tv_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Forma: Redonda\nGema: Diamante\nMaterial: Oro Amarillo\nTamaño: 7mm\nTalla: 6"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:lineSpacingExtra="6dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- FAB minimalista -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:text="Continuar"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            app:icon="@drawable/ic_chat"
            app:iconTint="@android:color/white"
            app:backgroundTint="@color/green_brisas"
            android:elevation="4dp"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>