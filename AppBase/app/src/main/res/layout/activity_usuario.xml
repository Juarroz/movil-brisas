<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <EditText android:id="@+id/txtNombre" android:hint="Nombre" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/txtCorreo" android:hint="Correo" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/txtTelefono" android:hint="TelÃ©fono" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/txtDocnum" android:hint="Docnum o ID" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button android:id="@+id/btnGuardar" android:text="Crear Usuario" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnCargar" android:text="Cargar Usuarios" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnEliminar" android:text="Eliminar Usuario" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/txtListaUsuarios" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lista de usuarios" android:paddingTop="16dp"/>
    </LinearLayout>
</ScrollView>
