<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="#094817"
                    android:endColor="#E1238C41"
                    android:angle="90" />
            <corners android:radius="16dp" />
            <stroke android:width="0dp" android:color="@android:color/transparent" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="#E4085D0D"
                    android:endColor="#0B442C"
                    android:angle="90" />
            <corners android:radius="16dp" />
            <stroke android:width="0dp" android:color="@android:color/transparent" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>

</selector>
