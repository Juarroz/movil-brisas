<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_bg"/>
            <corners android:radius="@dimen/card_corner"/>
            <stroke android:width="2dp" android:color="@color/stroke_dark"/>
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <corners android:radius="@dimen/card_corner"/>
        </shape>
    </item>
</layer-list>
